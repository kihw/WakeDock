# Votre configuration de domaines pour WakeDock
# Remplacez ces valeurs dans votre fichier .env

# ===============================
# Configuration des Domaines
# ===============================
HOST_URL=mtool.ovh
DASHBOARD_URL=admin.mtool.ovh
API_URL=api.mtool.ovh

# URLs complètes (avec HTTPS)
PUBLIC_API_URL=https://api.mtool.ovh
WAKEDOCK_API_URL=https://api.mtool.ovh

# CORS Configuration pour vos domaines
CORS_ALLOW_ORIGINS=["https://admin.mtool.ovh", "https://api.mtool.ovh", "https://mtool.ovh"]

# ===============================
# Configuration Caddy pour HTTPS automatique
# ===============================
CADDY_AUTO_HTTPS=on
CADDY_ADMIN_API_ENABLED=true

# ===============================
# Ports (ne seront utilisés qu'en interne)
# ===============================
CADDY_HTTP_PORT=80
CADDY_HTTPS_PORT=443
CADDY_ADMIN_PORT=2019

# Les services internes gardent leurs ports mais ne sont pas exposés
WAKEDOCK_CORE_PORT=8000
DASHBOARD_PORT=3000
