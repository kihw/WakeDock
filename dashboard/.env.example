# WakeDock Dashboard Environment Variables
# Copy this file to .env and customize the values

# API Configuration
PUBLIC_API_URL=http://localhost:8000
PUBLIC_API_TIMEOUT=30000

# Authentication
PUBLIC_TOKEN_KEY=wakedock_token
PUBLIC_SESSION_TIMEOUT=86400000

# WebSocket Configuration  
PUBLIC_WS_URL=ws://localhost:8000/ws
PUBLIC_WS_RECONNECT_INTERVAL=5000
PUBLIC_WS_MAX_RECONNECT_ATTEMPTS=10

# UI Configuration
PUBLIC_THEME=auto
PUBLIC_REFRESH_INTERVAL=30000

# Development
NODE_ENV=development
PUBLIC_ENABLE_DEBUG=true

# Feature Flags
PUBLIC_FEATURE_ANALYTICS=true
PUBLIC_FEATURE_NOTIFICATIONS=true
PUBLIC_FEATURE_REALTIME=true

# Security (Production only - do not commit with real values)
# SESSION_SECRET=your-session-secret-key
# JWT_SECRET=your-jwt-secret-key
# ADMIN_EMAIL=admin@wakedock.local
# ADMIN_PASSWORD=change-this-password
