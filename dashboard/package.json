{
    "name": "wakedock-dashboard",
    "version": "1.1.0",
    "description": "WakeDock Enhanced Web Dashboard - Modern Docker Management Interface",
    "type": "module",
    "scripts": {
        "dev": "vite dev --host 0.0.0.0 --port 3000",
        "build": "vite build",
        "build:debug": "vite build --mode development --debug",
        "preview": "vite preview --host 0.0.0.0 --port 4173",
        "start": "node build/index.js",
        "start:debug": "node --inspect=0.0.0.0:9229 build/index.js",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "test:build": "npm run build && test -f build/index.js && echo 'Build test passed' || echo 'Build test failed'",
        "lint": "eslint .",
        "format": "prettier --write .",
        "type-check": "tsc --noEmit"
    },
    "keywords": [
        "docker",
        "orchestration",
        "management",
        "dashboard",
        "svelte",
        "typescript",
        "containers",
        "devops"
    ],
    "author": {
        "name": "WakeDock Team",
        "email": "team@wakedock.com",
        "url": "https://wakedock.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/kihw/WakeDock.git"
    },
    "bugs": {
        "url": "https://github.com/kihw/WakeDock/issues"
    },
    "homepage": "https://wakedock.com",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "devDependencies": {
        "@sveltejs/adapter-node": "^2.1.2",
        "@sveltejs/kit": "^2.5.28",
        "@sveltejs/vite-plugin-svelte": "^3.1.2",
        "@tsconfig/svelte": "^5.0.4",
        "@types/node": "^22.7.5",
        "@typescript-eslint/eslint-plugin": "^8.8.1",
        "@typescript-eslint/parser": "^8.8.1",
        "autoprefixer": "^10.4.20",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-svelte": "^2.44.1",
        "postcss": "^8.4.47",
        "prettier": "^3.3.3",
        "prettier-plugin-svelte": "^3.2.7",
        "svelte": "^4.2.19",
        "svelte-check": "^4.0.4",
        "tailwindcss": "^3.4.13",
        "typescript": "^5.6.3",
        "vite": "^5.4.8"
    },
    "dependencies": {
        "@fontsource/inter": "^5.1.0",
        "lucide-svelte": "^0.451.0",
        "polka": "^0.5.2"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead",
        "not ie 11"
    ],
    "postcss": {
        "plugins": {
            "tailwindcss": {},
            "autoprefixer": {}
        }
    },
    "prettier": {
        "useTabs": false,
        "singleQuote": true,
        "trailingComma": "es5",
        "printWidth": 100,
        "plugins": [
            "prettier-plugin-svelte"
        ],
        "overrides": [
            {
                "files": "*.svelte",
                "options": {
                    "parser": "svelte"
                }
            }
        ]
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "eslint:recommended",
            "@typescript-eslint/recommended",
            "prettier"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "parserOptions": {
            "sourceType": "module",
            "ecmaVersion": 2020,
            "extraFileExtensions": [
                ".svelte"
            ]
        },
        "env": {
            "browser": true,
            "es2017": true,
            "node": true
        },
        "overrides": [
            {
                "files": [
                    "*.svelte"
                ],
                "processor": "svelte/svelte"
            }
        ]
    },
    "volta": {
        "node": "20.18.0",
        "npm": "10.8.2"
    }
}