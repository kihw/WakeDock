{
    admin 0.0.0.0:2019
    email admin@mtool.ovh
    # Enable automatic HTTPS for production
    auto_https on
}

# Production: HTTPS with automatic SSL certificates
admin.mtool.ovh {
    # Dashboard API config endpoint (must be before /api/v1/*)
    reverse_proxy /api/config wakedock-dashboard:3000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # WakeDock API routes
    reverse_proxy /api/v1/* wakedock-core:8000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # WebSocket support
    reverse_proxy /ws wakedock-core:8000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
        header_up Upgrade {>Upgrade}
        header_up Connection {>Connection}
    }
    
    # Dashboard (default route)
    reverse_proxy /* wakedock-dashboard:3000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Enable compression
    encode gzip
    
    # Enhanced security headers for production
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        X-XSS-Protection "1; mode=block"
        Referrer-Policy strict-origin-when-cross-origin
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self'; connect-src 'self' https://admin.mtool.ovh wss://admin.mtool.ovh; frame-ancestors 'none'; base-uri 'self'; form-action 'self'"
        Permissions-Policy "camera=(), microphone=(), geolocation=()"
    }
    
    # Rate limiting
    rate_limit {
        zone static {
            key {remote}
            events 100
            window 1m
        }
        zone api {
            key {remote}
            events 50
            window 1m
        }
    }
    
    # Apply rate limiting
    @api path /api/v1/*
    rate_limit @api api
    rate_limit static
    
    # Logging with structured format
    log {
        output file /var/log/caddy/admin.mtool.ovh.log {
            roll_size 100MB
            roll_keep 5
            roll_keep_for 720h
        }
        format json
        level INFO
    }
}

# Redirect HTTP to HTTPS
http://admin.mtool.ovh {
    redir https://admin.mtool.ovh{uri} permanent
}