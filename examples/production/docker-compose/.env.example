# Production Docker Compose Environment Variables
# Copy this file to .env and customize for your environment

# Domain Configuration
DOMAIN=your-domain.com
EMAIL=admin@your-domain.com

# WakeDock Configuration
WAKEDOCK_SECRET_KEY=change-this-to-a-secure-32-plus-character-secret-key
WAKEDOCK_ADMIN_PASSWORD=change-this-secure-admin-password
WAKEDOCK_DEBUG=false

# Database Configuration
POSTGRES_DB=wakedock
POSTGRES_USER=wakedock
POSTGRES_PASSWORD=secure-database-password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=secure-redis-password

# Caddy Configuration
CADDY_ADMIN_API_KEY=secure-caddy-admin-key

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=secure-grafana-password
PROMETHEUS_RETENTION=30d

# Backup Configuration
BACKUP_ENCRYPTION_KEY=secure-backup-encryption-key
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Alerting Configuration
SMTP_HOST=smtp.your-domain.com
SMTP_PORT=587
SMTP_USER=alerts@your-domain.com
SMTP_PASSWORD=secure-smtp-password
ALERT_EMAIL=admin@your-domain.com

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Security Configuration
RATE_LIMIT_STORAGE=redis
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT=3600

# Performance Configuration
WAKEDOCK_WORKERS=2
POSTGRES_MAX_CONNECTIONS=100
REDIS_MAX_CONNECTIONS=50

# SSL Configuration (for Let's Encrypt)
ACME_EMAIL=${EMAIL}
ACME_CA_SERVER=https://acme-v02.api.letsencrypt.org/directory

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_RETENTION_DAYS=30

# Feature Flags
METRICS_ENABLED=true
HEALTH_CHECKS_ENABLED=true
AUTO_BACKUP_ENABLED=true
RATE_LIMITING_ENABLED=true
