---
# Global WakeDock configuration
# Copy this file to all.yml and customize

# Application settings
wakedock_version: "latest"
wakedock_domain: "wakedock.example.com"
wakedock_environment: "production"
wakedock_port: 8000
wakedock_dashboard_port: 3000

# Database settings
database_type: "postgresql"
database_name: "wakedock"
database_user: "wakedock"
database_password: "{{ vault_database_password }}"
database_host: "localhost"
database_port: 5432

# Redis settings
redis_host: "localhost"
redis_port: 6379
redis_password: "{{ vault_redis_password }}"

# Security settings
jwt_secret_key: "{{ vault_jwt_secret_key }}"
admin_password: "{{ vault_admin_password }}"
api_key: "{{ vault_api_key }}"

# SSL/TLS settings
ssl_enabled: true
ssl_cert_email: "admin@example.com"
ssl_cert_provider: "letsencrypt"  # letsencrypt, selfsigned, custom

# Docker settings
docker_compose_version: "3.8"
docker_network_name: "wakedock_network"
docker_data_dir: "/opt/wakedock/data"
docker_logs_dir: "/opt/wakedock/logs"
docker_config_dir: "/opt/wakedock/config"

# Backup settings
backup_enabled: true
backup_schedule: "0 2 * * *"  # Daily at 2 AM
backup_retention_days: 30
backup_s3_bucket: ""
backup_s3_region: ""

# Monitoring settings
monitoring_enabled: true
prometheus_port: 9090
grafana_port: 3001
alertmanager_port: 9093

# Logging settings
log_level: "info"
log_format: "json"
log_rotation_size: "100MB"
log_retention_days: 7

# Firewall settings
firewall_enabled: true
allowed_ports:
  - "22"    # SSH
  - "80"    # HTTP
  - "443"   # HTTPS
  - "{{ wakedock_port }}"
  - "{{ wakedock_dashboard_port }}"

# System settings
system_timezone: "UTC"
system_locale: "en_US.UTF-8"
system_update_cache: true
system_upgrade_packages: false

# User settings
wakedock_user: "wakedock"
wakedock_group: "wakedock"
wakedock_home: "/opt/wakedock"

# Network settings
network_interface: "{{ ansible_default_ipv4.interface }}"
network_address: "{{ ansible_default_ipv4.address }}"

# Health check settings
health_check_enabled: true
health_check_interval: 30
health_check_timeout: 10
health_check_retries: 3

# Performance settings
max_connections: 100
worker_processes: 4
worker_connections: 1000
