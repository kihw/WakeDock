# WakeDock Ansible Inventory Template
# Copy this file to 'hosts' and customize for your environment

[wakedock_servers]
# Production servers
wakedock-prod-01 ansible_host=10.0.1.10 ansible_user=ubuntu
wakedock-prod-02 ansible_host=10.0.1.11 ansible_user=ubuntu

[wakedock_staging]
# Staging servers
wakedock-staging ansible_host=10.0.2.10 ansible_user=ubuntu

[wakedock_dev]
# Development servers
wakedock-dev ansible_host=192.168.1.100 ansible_user=vagrant

[kubernetes_masters]
# Kubernetes master nodes
k8s-master-01 ansible_host=10.0.1.20 ansible_user=ubuntu
k8s-master-02 ansible_host=10.0.1.21 ansible_user=ubuntu

[kubernetes_workers]
# Kubernetes worker nodes
k8s-worker-01 ansible_host=10.0.1.30 ansible_user=ubuntu
k8s-worker-02 ansible_host=10.0.1.31 ansible_user=ubuntu
k8s-worker-03 ansible_host=10.0.1.32 ansible_user=ubuntu

[database_servers]
# Database servers (if separate)
db-prod ansible_host=10.0.1.40 ansible_user=postgres

[monitoring_servers]
# Monitoring servers
monitor-prod ansible_host=10.0.1.50 ansible_user=ubuntu

# Group definitions
[production:children]
wakedock_servers
database_servers
monitoring_servers

[staging:children]
wakedock_staging

[development:children]
wakedock_dev

[kubernetes:children]
kubernetes_masters
kubernetes_workers

[all:vars]
# Global SSH settings
ansible_ssh_private_key_file=~/.ssh/id_rsa
ansible_ssh_common_args='-o StrictHostKeyChecking=no'

# Python interpreter
ansible_python_interpreter=/usr/bin/python3
